<div id="itemInfo">

  <h3 id="heading"> <%=info.title %></h3>

  <div class="row">
    <div class="col-sm-3">
      <img src= <%=info.image %> alt="" class="thumbnail" style="width: 12em;">
    </div>
    <div class="col-sm-6 col-sm-offset-1">
      <p id="itemId" class="hide"> <%=info._id %> </p>
      <p> Brand: <%=info.brand %></p>
      <p> Stock: <span id="stock"><%=info.stock %></span></p>
      <p> Seller: <%= info.seller %></p>
      <p> Price:<span id="itemPrice"> <%=info.price %></span></p>
      <input id="addToCart" class="btn btn-primary" type="button" value="Add to Cart" role="button" />
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <th>Reviewer</th>
        <th>Rating</th>
        <th>Comment</th>
      </thead>
      <tbody>
        <% for(var i =0; i<info.reviews.length ;i++) {%>
          <% if(i >= 3) { %>
            <tr class="reviews hide" >
          <% } else {%>
            <tr class="reviews" >
          <% } %>
          <td class="id hide"><%= info.reviews[i].id %></td>
          <td class="reviewer"> <%= info.reviews[i].reviewer %></td>
          <td class="rating"> <%= info.reviews[i].rating %></td>
          <% if(info.reviews[i].comment.length > 200) { %>
            <td class="partialComment "> <%= info.reviews[i].comment.substring(0,200) %> <p class="textComment"> (Show More) </p> </td>
            <td class="fullComment hide"> <%= info.reviews[i].comment %> <p class="textComment"> (Show Less) </p> </td>
          <% } else {%>
            <td class="comment"> <%= info.reviews[i].comment %></td>
          <% } %>
        </tr>
        <% } if(info.reviews.length > 3) {%>
          <tr class="showMoreComments">
            <td colspan=3>show more</td>
          </tr>
        <% } %>

      </tbody>
    </table>
  </div>
</div>

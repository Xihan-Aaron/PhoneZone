<!DOCTYPE html>
<html>
	<head>
		<script type="text/javascript" src="/js/jquery-3.6.0.js"></script>
		<link rel="stylesheet" type="text/css" href="/bootstrap-3.4.1-dist/css/bootstrap.css" />
		<link rel="stylesheet" type="text/css" href="/css/main.css" media="screen" />
		<link rel="stylesheet" type="text/css" href="/css/register.css" media="screen" />
		<script defer type="text/javascript" src="/js/main.js"></script> 
		<title>Profile</title>
	</head>
	<body>
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"></button>
					<a class="navbar-brand" href="/">PhoneZone</a>
				</div>
				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li><a href="/">Main</a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/checkout">Check out</a></li>
						<li><a href="/users/signout">Sign out</a></li>
					</ul>
				</div>
			</div>
		</nav>

		<div class="container">
			<h2>Profile</h2>

			<label for="firstname">First Name</label> 	
			<input  type="text" name="firstname" class="form-control" disabled value="<%= userInfo["firstname"] %>"/>
	
			<label  for="lastname">Last Name</label> 
			<input type="text" name="lastname" class="form-control" disabled value="<%= userInfo["lastname"] %>"/>
			
			<label for="email">Email</label> 
			<input type="email" name="email" class="form-control" disabled value="<%= userInfo["email"] %>"/>
	
			<%- include('editProfile') %>
	
			<%- include('editPassword') %>

		</div>

		<div>
			<table>
				<thead>
					<tr>
						<th>Title</th>
						<th>Brand</th>
						<th>Image</th>
						<th>Avaliable Stock</th>
						<th>Seller</th>
						<th>Price</th>
						<th>Disabled</th>
					</tr>
				</thead>
				  <tbody>
				    <% for(var i =0;i<items.length;i++) {%>
				      <tr>
				      	<td><%= items[i].title %></td>
				      	<td><%= items[i].brand %></td>
				        <td><img src=<%=items[i].image %> alt=""></td>
				        <td><%= items[i].stock %></td>
				        <td><%= items[i].seller %></td>
				        <td><%= items[i].price %></td>
				        <td><%= items[i].disabled %></td>
				        <td></td>
				      </tr>
				    <% } %>
				  </tbody>
			</table>
		</div>
		
	</body>
</html>